<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>com.belerweb:weibo4j-oauth2</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/config.properties</exclude>
					<exclude>**/Status.class</exclude>
					<exclude>**/User.class</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<excludes>
					<exclude>com.belerweb:weibo4j-oauth2</exclude>
		    </excludes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
</assembly>  